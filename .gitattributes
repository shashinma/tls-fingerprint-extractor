# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.pcap binary
*.pcapng binary
*.pyc binary

# Archive files
*.zip binary
*.tar.gz binary
*.tar.bz2 binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Executable files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
